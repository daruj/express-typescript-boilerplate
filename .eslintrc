{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "no-unused-vars": 0,
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "semi": false,
                "parser": "typescript"
            }
        ],
        "require-await": "error"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false,
            "modules": true
        }
    }
}
